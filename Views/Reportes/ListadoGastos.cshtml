@model GestorDeGastos.ViewModels.GastoFiltroViewModel

<div class="container mt-4">
    <h2>Reporte de Gastos</h2>

    <!-- Filtros -->
    <form method="get" class="row mb-4" id="formFiltros">
        <div class="col-md-2">
            <label>Desde <span class="text-danger">*</span></label>
            <input type="date" class="form-control" name="fechaDesde" value="@Model.FechaDesde?.ToString("yyyy-MM-dd")" required />
        </div>
        <div class="col-md-2">
            <label>Hasta <span class="text-danger">*</span></label>
            <input type="date" class="form-control" name="fechaHasta" value="@Model.FechaHasta?.ToString("yyyy-MM-dd")" required />
        </div>

        <div class="col-md-2">
            <label>Moneda <span class="text-danger">*</span></label>
            <select class="form-select" name="moneda" required>
                <option value="">Seleccione</option>
                @foreach (var m in Model.Monedas)
                {
                    <option value="@m" selected="@(m == Model.Moneda ? "selected" : null)">@m</option>
                }
            </select>
        </div>


        <div class="col-md-3">
            <label>Usuario</label>
            <select class="form-select" name="usuarioId">
                <option value="">-- Todos --</option>
                @foreach (var u in Model.Usuarios)
                {
                    <option value="@u.Id" selected="@(u.Id == Model.UsuarioId ? "selected" : null)">@u.NombreUsuario</option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <label>Rubro</label>
            <select class="form-select" name="rubroId">
                <option value="">-- Todos --</option>
                @foreach (var r in Model.Rubros)
                {
                    <option value="@r.Id" selected="@(r.Id == Model.RubroId ? "selected" : null)">@r.NombreRubro</option>
                }
            </select>
        </div>

        <div class="col-12 mt-3">
            <button type="submit" class="btn btn-primary me-2">Filtrar</button>
            <a href="@Url.Action("ListadoGastos", "Reportes")" class="btn btn-secondary">Borrar Filtros</a>
        </div>
    </form>

    <!-- Resultados -->
    @if (Model.Resultados.Any())
    {

        <div class="row">

            <div class="col-6">
                <p><strong>Total: @Model.Moneda @Model.Total.ToString("N2")</strong></p>
            </div>

            <div class="col-6 text-end">
                        <a class="btn btn-success mt-2"
           href="@Url.Action("ExportarExcel", "Reportes", new {
               fechaDesde = Model.FechaDesde?.ToString("yyyy-MM-dd"),
               fechaHasta = Model.FechaHasta?.ToString("yyyy-MM-dd"),
               usuarioId = Model.UsuarioId,
               rubroId = Model.RubroId,
                moneda = Model.Moneda

           })">
            📤 Exportar a Excel
        </a>
                </div>


        </div>




        <table class="table table-bordered table-sm">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Usuario</th>
                    <th>Moneda</th>
                    <th>Importe</th>
                    <th>Rubro</th>
                    <th>Detalle</th>
                    <th>Comentario</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var g in Model.Resultados)
                {
                    <tr class="@((!g.EsActivo) ? "table-danger" : (g.Monto < 0) ? "table-warning" : "")">
                        <td>@g.Fecha.ToShortDateString()</td>
                        <td>@g.Usuario</td>
                        <td>@g.Moneda</td>
                        <td>@g.Monto.ToString("N2")</td>
                        <td>@g.Rubro</td>
                        <td>@g.Detalle</td>
                        <td>@g.Comentario</td>
                        
                        
                    </tr>
                }
            </tbody>
        </table>


    }
    else if (Model.FechaDesde != null)
    {
        <div class="alert alert-info">No se encontraron gastos con los filtros seleccionados.</div>
    }
</div>
