@model GestorDeGastos.ViewModels.RubroViewModel

<h2>Crear Rubro</h2>

<form asp-action="CrearRubro" method="post">
    <div class="form-group">
        <label>Nombre del Rubro</label>
        <input asp-for="NombreRubro" class="form-control" />
    </div>

    <div class="form-group">
        <label>Asignar a Roles:</label>
        @foreach (var rol in Model.RolesDisponibles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox"
                       name="RolesSeleccionados" value="@rol.Value" id="rol_@rol.Value" />
                <label class="form-check-label" for="rol_@rol.Value">@rol.Text</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>