@model GestorDeGastos.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h1>Eliminar usuario</h1>

<h3>Estás seguro que deseas eliminar el usuario @Model.NombreUsuario ?</h3>

    
    <form asp-action="EliminarUsuario">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="ListadoUsuarios">Cancelar</a>
    </form>
</div>
