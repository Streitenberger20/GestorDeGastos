@model GestorDeGastos.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}


<h1>Crear Usuario</h1>

<hr />
<div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-4">
        <form asp-action="CrearUsuario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="NombreUsuario" class="control-label">Nombre de usuario</label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Contraseña" class="control-label">Contraseña</label>
                <input asp-for="Contraseña" type="password" class="form-control" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>
            <div class="form-group mb-5">
                <label asp-for="RolId" class="control-label">Rol</label>
                <select asp-for="RolId" class ="form-control" asp-items="ViewBag.Rol"></select>
                <span asp-validation-for="RolId" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center align-items-center">
                <input type="submit" value="CrearUsuario" class="btn btn-primary mb-3" />
            </div>
        </form>
        <div class="form-group d-flex justify-content-center align-items-center">
            <a asp-action="ListadoUsuarios" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
