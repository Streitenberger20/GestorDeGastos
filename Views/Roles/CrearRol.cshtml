@model GestorDeGastos.ViewModels.CrearRolViewModel

@{
    ViewData["Title"] = "Crear Rol";
}

<h2>Crear Rol</h2>

<form asp-action="CrearRol" method="post">
    <div class="form-group mb-3">
        <label for="NombreRol">Nombre del Rol</label>
        <input asp-for="NombreRol" class="form-control" />
        <span asp-validation-for="NombreRol" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Rubros disponibles</label>
        <div class="row">
            @foreach (var rubro in Model.RubrosDisponibles)
            {
                <div class="col-md-4">
                    <input type="checkbox"
                           name="RubrosSeleccionados"
                           value="@rubro.Value"
                           id="rubro_@rubro.Value" />
                    <label for="rubro_@rubro.Value">@rubro.Text</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-success">Crear Rol</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>