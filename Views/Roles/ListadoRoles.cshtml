@model IEnumerable<GestorDeGastos.Models.Rol>

@{
    ViewData["Title"] = "Gestión de Roles";
}
<div class="container mt-4">

    <h1>Gestión de Roles</h1>

    <hr />
    <a asp-action="CrearRol" class="btn btn-success mb-4">
        Nuevo Rol
    </a>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">Rol</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.NombreRol)</td>
                        <td class="text-center">
                            <a asp-action="EditarRol" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


