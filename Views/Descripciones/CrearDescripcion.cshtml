@model Descripcion

<h2>Nueva Descripción</h2>

<form asp-action="CrearDescripcion" method="post">
    <div class="form-group">
        <label asp-for="NombreDescripcion"></label>
        <input asp-for="NombreDescripcion" class="form-control" />
        <span asp-validation-for="NombreDescripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="RubroId">Rubro</label>
        <select asp-for="RubroId" asp-items="ViewBag.Rubros" class="form-control">
            <option value="">-- Seleccionar Rubro --</option>
        </select>
        <span asp-validation-for="RubroId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
